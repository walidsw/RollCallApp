

<Button1@ToggleButton>:
    size_hint_y: None
    height:  100




<MyLayout>
    do_default_tab: False 

    TabbedPanelItem:
        text : "Home"

        BoxLayout:
            size: root.width, root.height 
            orientation: 'vertical'
            padding: 100
            spacing: 50

            Button:
                id:anc_b
                font_size: 24
                text: "ADD NEW"
                on_press: root.play_sound()
                on_press: root.add_classroom()
            Button:
                id:delc_b
                font_size: 24
                text: "DELETE"
                on_press: root.play_sound()
                on_press: root.delete_class()
            Button:
                id:ex_b
                font_size: 24
                text: "EXIT"
                on_press: root.exit_app()



    ############################################

    TabbedPanelItem:
        text: "Roll Call"

        BoxLayout:
            id: roll_call
            orientation: "vertical"
            size:  root.width, root.height
            spacing: 20
            padding: 100





    #############################################

    TabbedPanelItem:
        text: "Register"

        ScrollView:
            do_scroll_x: False 
            do_scroll_y: True


            GridLayout:
                id: kaka
                cols: 5
                size_hint: 1, None
                height: 2250
                spacing: 10
                padding: 20
                

                

            
    TabbedPanelItem:
        text: "Submit"
        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            padding: 100
            spacing: 50

            Button:
                text: "SUBMIT"
                font_size: 24
                on_press: root.play_sound()
                on_press: root.final_submit()
            Button:
                text: "CANCEL"
                font_size: 24
                on_press: root.play_sound()
                on_press: root.cancel_btn()
            Button:
                text: "QUIT"
                font_size: 24
                on_press: root.exit_app()

    
    TabbedPanelItem:
        text: "Details"

        ScrollView:
            do_scroll_x: False 
            do_scroll_y: True


            GridLayout:
                id: det
                cols: 1
                size_hint: 1, None
                height: 4000




                





